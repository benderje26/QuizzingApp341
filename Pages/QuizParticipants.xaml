<!-- This file defines UI, binding and events for the Participants screen -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzingApp341.Pages.QuizParticipants"
             Padding="7">


    <StackLayout Padding="10"
                 Spacing="10">
        <Label Text="Quiz 1"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="#11017a"/>
        
        <StackLayout Orientation="Vertical"
                        Padding="10"
                        BackgroundColor ="#E6E6E6">
                    <Label Text="Date: 10/14/2024"
                           VerticalOptions="End"/>
                </StackLayout>

        <!-- List of Participants -->
        <ListView x:Name="ParticipantsListView"
                  ItemsSource="{Binding Participants}"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand"
                  RowHeight="70"
                  SeparatorColor="#11017a">

            <ListView.Header>
                <StackLayout Orientation="Vertical"
                        Padding="10"
                        HorizontalOptions="Center">
                    <Label Text="Participants:"
                           VerticalOptions="Start"
                           FontAttributes="Bold"
                           FontSize="18"/>
                </StackLayout>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding User}"
                                   FontAttributes="Bold"
                                   FontSize="18"/>
                            <Label Text="{Binding Score, StringFormat='Score: {0}'}"
                                   FontSize="14"
                                   TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Footer>
                <StackLayout Padding="10">
                    <Label
                        Text="{Binding Participants.Count, StringFormat = 'Total: {0} Participants'}"/>
                </StackLayout>
            </ListView.Footer>
        </ListView>
    </StackLayout>

</ContentPage>