                        CornerRadius="5" 
                        HorizontalOptions="End" 
                        Clicked="OnAddQuizClicked" />
            </Grid>
        </Toolbar>
    </ContentPage.Toolbar>


<StackLayout Padding="20" VerticalOptions="Center">

