<ContentPage.Toolbar>
        <Toolbar>
            <Grid ColumnDefinitions="*, Auto">
                <Label Text="My Quizzes" 
                       FontSize="24" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Start" />
