<!-- This xaml file defines the UI elements, data binding and events for the 
Statistics screen -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzingApp341.Views.StatisticsScreen"
             xmlns:drawable="clr-namespace:QuizzingApp341.Views"
             Padding="7"
             Title="Statistics"
             BackgroundColor="#006D77">

    <!-- Define a Grid with two rows -->
    <Grid RowDefinitions="*, Auto">
        <!-- Scrollable content in the first row -->
        <ScrollView Grid.Row="0">
            <StackLayout Padding="10"
                         Spacing="20">

                <StackLayout Orientation="Vertical">
                    <Label Text="Quiz 1"
                           FontSize="20"
                           TextColor="#FFCA3A"/>
                    <Label Text="Date: 10/24/2024"
                           FontSize="15"
                           TextColor="#FFCA3A"/>
                </StackLayout>

                <!-- Box plot chart -->
                <GraphicsView 
                    x:Name="Canvas"                 
                    HorizontalOptions="Fill"
                    Drawable="{Binding QuizStatsBoxplot}" 
                    HeightRequest="100"       
                    Grid.Row="1"/>

                <!-- Stats section -->
                <StackLayout BackgroundColor="#086880"
                             Padding="10">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Mean: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.Mean}"
                            FontSize="15"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Median: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.Median}"
                               FontSize="15"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="High: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.Maximum}"
                            FontSize="15"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Low: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.Minimum}"
                            FontSize="15"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Lower Quartile: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.LowerQuartile}"
                            FontSize="15"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Upper Quartile: "
                               FontAttributes="Bold"
                               FontSize="15"/>
                        <Label Text="{Binding QuizStatistics.UpperQuartile}"
                            FontSize="15"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Button to view all participants in the second row -->
        <Button Text="View All Participants"
                Clicked="ViewAllParticipantsClicked"
                BackgroundColor="#086880"
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="End"/>
    </Grid>
</ContentPage>
