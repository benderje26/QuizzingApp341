<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzingApp341.Views.UpdateEmail"
             Padding="7">
    <Grid RowDefinitions="*,*,Auto,2*" ColumnDefinitions="*,3*,*">
        <Label
            Grid.Column="1"
            Grid.Row="1"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            FontSize="35"
            Text="Update Email"/>
        <VerticalStackLayout Grid.Row="2" Grid.Column="1">
            <Entry
                x:Name="emailInput"
                Placeholder="New Email Address"
                Keyboard="Email"/>
            <Entry
                x:Name="repeatEmailInput"
                Placeholder="Repeat Email"
                Keyboard="Email"/>
            <Button
                Text="Update Email"
                Margin="0,30,0,0"
                Clicked="OnUpdateEmailButtonClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>