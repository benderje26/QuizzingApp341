<!-- This xaml file defines the UI elements, data binding and events for the 
Statistics screen -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzingApp341.Views.StatisticsScreen"
             xmlns:drawable="clr-namespace:QuizzingApp341.Views"
             Padding="7">
             <ContentPage.Resources>
                <drawable:Canvas x:Key="MyDrawable" />
            </ContentPage.Resources>

    <!-- Define a Grid with two rows -->
    <Grid RowDefinitions="*, Auto">
        <!-- Scrollable content in the first row -->
        <ScrollView Grid.Row="0">
            <StackLayout Padding="10"
                         Spacing="10">
                <Label Text="Statistics"
                       FontSize="24"
                       TextColor="#11017a"
                       HorizontalOptions="Center"/>

                <StackLayout Orientation="Vertical">
                    <Label Text="Quiz 1"
                           FontSize="15"/>
                    <Label Text="Date: 10/24/2024"
                           FontSize="12"/>
                </StackLayout>

                <!-- Box plot chart -->
                <GraphicsView 
                x:Name="Canvas"                 
                HorizontalOptions="Fill"
                Drawable="{StaticResource MyDrawable}" 
                HeightRequest="100"       
                Grid.Row="1"/>

                <!-- Stats section -->
                <StackLayout BackgroundColor="#E6E6E6"
                             Padding="10">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Mean: "
                               FontAttributes="Bold"/>
                        <Label Text="75"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Median: "
                               FontAttributes="Bold"/>
                        <Label Text="83"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="High: "
                               FontAttributes="Bold"/>
                        <Label Text="89"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Low: "
                               FontAttributes="Bold"/>
                        <Label Text="55"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Lower Quartile: "
                               FontAttributes="Bold"/>
                        <Label Text="60"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Upper Quartile: "
                               FontAttributes="Bold"/>
                        <Label Text="89"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Button to view all participants in the second row -->
        <Button Text="View All Participants"
                Clicked="ViewAllParticipantsClicked"
                BackgroundColor="#11017a"
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="End"/>
    </Grid>
</ContentPage>
